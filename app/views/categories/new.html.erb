<%= render 'shared/content_title', title: 'Create a New Category' %>

<%= render 'shared/errors', obj: @category %>

<div class='row'>
  <div class='form-group'>
    <%= form_for @category do |f| %>
      <div class='form-group col-sm-4'>
        <%= f.label :name, class: 'control-label' %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>
      <div class='col-sm-12'>
        <%= f.submit "Create Category", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
<hr>
<div>
  <h5>Current categories include:</h5>
  <% Category.all.sort{|a,b| a['name']<=>b['name']}.each do |category| %>
    <%= render 'category', category: category %>
  <% end %>
</div>

